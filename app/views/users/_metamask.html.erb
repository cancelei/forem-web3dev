  <div class="crayons-card crayons-card--content-rows">
    <h2 class="crayons-subtitle-1">
      <%= t("views.settings.custom.metamask") %>
    </h2>
    <div class="crayons-field">
      <div class="theme-selector-field grid grid-cols-5">
      </div>
      <p>
        <%= t("views.settings.custom.metamask_description") %>
      </p>
      <span id='wallet_addresses'>
        <% if @user.wallets.any? %>
          <h2>Carteiras:</h2>
            <% @user.wallets.each do |wallet| %>
            <p>
              <%= wallet.address %>
            </p>
              <div>
                <button id="<%= wallet.address %>" class='crayons-btn crayons-btn--bg connect-mm-button mm-delete-button'>Delete</button>
              </div>
            <% end %>
        <% else %>
          <div>
            <button class='crayons-btn crayons-btn--bg connect-mm-button mm-connect-button'>Connect</button>
          </div>
        <% end %>
      </span>
      <div>
        <%= javascript_packs_with_chunks_tag "connectMetamask" %>
        <button class='crayons-btn crayons-btn--bg'>Change Wallet</button>
      </div>
    </div>
  </div>
